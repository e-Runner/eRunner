function delete_job(obj, callback_ok, callback_error)
{
    var objarray = obj.length;

    for(i=0; i<objarray;i++)
    {
        if(obj[i].checked == true)
        {
            var delete_json = {
                DeleteJobName: obj[i].id
            }

            var json_str = JSON.stringify(delete_json);

            $.ajax({
                type: "post",
                url: "/DeleteJob/",
                dataType: "json",
                data: json_str,
                success: callback_ok,
                error: callback_error
            });
        }
    }
}

