function filter_job(obj,callback_ok,callback_error)
{
    var filter_json = {

        ProductName: obj
    }

    var json_str = JSON.stringify(filter_json);

    $.ajax({
        type:"post",
        url:"/FilterJob/",
        dataType: "json",
        data: json_str,
        success: callback_ok,
        error:callback_error
    });
}

